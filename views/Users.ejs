<html>
    <head>
        <style>
            .logdiv {
                margin-top:95px;
                width: 50%;
            }
            .div2 {
                margin-top:35px;
                width: 80%;
            }
            .div3 {
                margin-top:20px;
                width: 80%;
            }
            th, td {
  padding: 8px;
}

            .button {
  background-color: #F4C6AD; /* Green */
  border: none;
  color: white;
  padding: 15px 32px;
  text-align: center;
  text-decoration: none;
  display: inline-block;
  font-size: 16px;
  border-radius: 12px;
  color: black; 
}
        </style>
    </head>
<body bgcolor="FCFFE9">
    <div>
        <center>
            <h2>Welcome to Game Based Learning on AWS!!</h2>
            
                
                    <div class="logdiv">
                        <h3>Current Standings!</h3>
                    </div>
                    <div class="div2">
                        <table style="width:50%">
                            <thead>
                              <tr>
                                <th scope="col" style="text-align:center">Rank</th>
                                <th scope="col" style="text-align:center">Name</th>
                                <th scope="col" style="text-align:center">Points</th>
                              </tr>
                            </thead>
                            <tbody>
                                
                                <% for(var i=0; i < main_arr.length; i++) { %>
                                    <tr padding-bottom: "6em">
                                      <td style="text-align:center"><%= (i+1) %></td>
                                      <td style="text-align:center"><%= main_arr[i].Username %></td>
                                      <td style="text-align:center"><%= main_arr[i].Score %></td>
                                    </tr>
                                 <% } %>
                            </tbody>
                        </table>

                    </div>
                    <div class="div2">
                        <form action="/Users" method="get">
                            <input class="button" type="submit" value="Refresh">
                        </form>
                    </div>
                    <div class="div3">
                        <form action="/Home" method="get">
                            <input class="button" type="submit" value="Back">
                        </form>
                    </div>
        </center>
    </div>
</body>
</html> 