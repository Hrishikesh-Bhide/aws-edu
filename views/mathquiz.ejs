<script>
    function checkScores(){
        var sc = 0;
    if(document.getElementById('scorew').checked) {
    sc += 1;
   }if(document.getElementById('q2-radio-choice-3').checked) {
    sc += 1;
   
}if(document.getElementById('q2-radio-choice-1').checked) {
    sc += 1;
   
}if(document.getElementById('q2-radio-choice-3').checked) {
    sc += 1;
   
}if(document.getElementById('q2-radio-choice-2').checked) {
    sc += 1;
   }
   window.alert("You scored " +sc+ " point(s)!");

   document.getElementById('scoreq').value = new Number(sc);

}
    
</script>


    </head>
